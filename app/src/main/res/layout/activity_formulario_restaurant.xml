<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioRestaurant">

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_view_crearcuenta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Crear nuevo restaurante"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/btn_formularioRestaurant_seleccionarLugar"
                android:layout_width="162dp"
                android:layout_height="37dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/restangule"
                android:backgroundTint="#B885F3"
                android:text="Selecciona lugar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioResaturant_telefono" />

            <EditText
                android:id="@+id/txt_formularioRestaurant_name"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/restangule"
                android:ems="10"
                android:hint="Nombre del restaurante"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_crearcuenta2" />

            <EditText
                android:id="@+id/txt_formualrioRestaurant_nit"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/restangule"
                android:ems="10"
                android:hint="Nit"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioRestaurant_name" />

            <EditText
                android:id="@+id/txt_formularioRestaurant_propietario"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/restangule"
                android:ems="10"
                android:hint="Nombre del propietario"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_formualrioRestaurant_nit" />

            <Button
                android:id="@+id/btn_formularioRestaurant_registra"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="96dp"
                android:background="@drawable/restangule"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Enviar Datos"
                android:textColor="#FDFDFD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_formularioRestaurant_lugar" />

            <EditText
                android:id="@+id/txt_formularioRestaurant_calle"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/restangule"
                android:ems="10"
                android:hint="Calle"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioRestaurant_propietario" />

            <Button
                android:id="@+id/btn_formularioRestaurant_lugar"
                android:layout_width="162dp"
                android:layout_height="37dp"
                android:layout_marginTop="84dp"
                android:background="@drawable/restangule"
                android:backgroundTint="#B885F3"
                android:text="Seleciona foto lugar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.112"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_formularioRestaurant_logo" />

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="812dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginTop="44dp"
                android:text="Lat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.542"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioResaturant_telefono" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="79dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:text="log"
                app:layout_constraintStart_toEndOf="@+id/btn_formularioRestaurant_seleccionarLugar"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioResaturant_telefono" />

            <Button
                android:id="@+id/btn_formularioRestaurant_logo"
                android:layout_width="162dp"
                android:layout_height="37dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/restangule"
                android:backgroundTint="#B885F3"
                android:text="Seleccionar logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_formularioRestaurant_seleccionarLugar" />

            <EditText
                android:id="@+id/txt_formularioResaturant_telefono"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/restangule"
                android:ems="10"
                android:hint="Telefono o celular"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_formularioRestaurant_calle" />

            <ImageView
                android:id="@+id/imageView_formulariorestaurante_logo"
                android:layout_width="111dp"
                android:layout_height="87dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.481"
                app:layout_constraintStart_toEndOf="@+id/btn_formularioRestaurant_logo"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/ic_undraw_moments_0y20" />

            <ImageView
                android:id="@+id/imageview_formularioRestaurante_lugar"
                android:layout_width="111dp"
                android:layout_height="86dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_formularioRestaurant_registra"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toEndOf="@+id/btn_formularioRestaurant_lugar"
                app:layout_constraintTop_toBottomOf="@+id/imageView_formulariorestaurante_logo"
                app:layout_constraintVertical_bias="0.233"
                app:srcCompat="@drawable/ic_undraw_moments_0y20" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>