<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_restaurante"
        android:layout_width="409dp"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_view_foto_restauant"
                android:layout_width="191dp"
                android:layout_height="172dp"
                app:srcCompat="@drawable/ic_undraw_download_pc33" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="197dp"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toEndOf="@+id/img_view_foto_restauant"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="197dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@android:drawable/stat_sys_phone_call"
                android:text="TextView"
                android:textStyle="bold"
                app:drawableTint="#673AB7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toEndOf="@+id/img_view_foto_restauant"
                app:layout_constraintTop_toBottomOf="@+id/txt_title" />

            <Button
                android:id="@+id/btn_ver_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/restangule"
                android:backgroundTint="#D0A0FF"
                android:text="ver menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.975"
                app:layout_constraintStart_toEndOf="@+id/img_view_foto_restauant"
                app:layout_constraintTop_toBottomOf="@+id/txt_phone"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_calle"
                android:layout_width="200dp"
                android:layout_height="19dp"
                android:text="TextView"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toEndOf="@+id/img_view_foto_restauant"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Dirteccion:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toEndOf="@+id/img_view_foto_restauant"
                app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>