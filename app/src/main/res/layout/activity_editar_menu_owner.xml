<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarMenuOwner">

    <Button
        android:id="@+id/btn_editMenu_guardarCambios"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/restangule"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Guardar cambios"
        android:textColor="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_menu_edit_photoproducto"
        android:layout_width="410dp"
        android:layout_height="222dp"
        android:layout_marginStart="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_undraw_breakfast_psiw" />

    <EditText
        android:id="@+id/txt_menu_edit_name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/restangule"
        android:ems="10"
        android:hint="Nombre producto"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_menu_edit_photoproducto" />

    <EditText
        android:id="@+id/txt_menu_edit_precio"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/restangule"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_menu_edit_name" />

    <EditText
        android:id="@+id/txt_menu_edit_description"
        android:layout_width="356dp"
        android:layout_height="87dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/restangule"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_editMenu_guardarCambios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_menu_edit_precio"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Foto producto"
        app:layout_constraintStart_toStartOf="@+id/imageView_menu_edit_photoproducto"
        app:layout_constraintTop_toTopOf="@+id/imageView_menu_edit_photoproducto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:text="Nombre del producto"
        app:layout_constraintBottom_toTopOf="@+id/txt_menu_edit_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_menu_edit_photoproducto"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:text="Precio producto"
        app:layout_constraintBottom_toTopOf="@+id/txt_menu_edit_precio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:text="Descripcion del producto"
        app:layout_constraintBottom_toTopOf="@+id/txt_menu_edit_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>