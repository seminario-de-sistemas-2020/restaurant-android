<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menus_user_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="23dp"
            android:paddingBottom="12dp">

            <Button
                android:id="@+id/btn_client_menu_agregar"
                android:layout_width="139dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/restangule"
                android:backgroundTint="#D0A0FF"
                android:drawableLeft="@drawable/ic_baseline_card_giftcard_24"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:text="agregar"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_client_menu_title"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_client_menu_description"
                android:layout_width="161dp"
                android:layout_height="186dp"
                android:layout_margin="4dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_owner_menu_list"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_client_menu_list"
                android:layout_width="230dp"
                android:layout_height="213dp"
                android:layout_margin="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_undraw_fast_loading_0lbh" />

            <TextView
                android:id="@+id/txt_client_menu_title"
                android:layout_width="229dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:paddingTop="4dp"
                android:text="title"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_client_menu_list" />

            <TextView
                android:id="@+id/txt_client_menu_precio"
                android:layout_width="69dp"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:padding="2dp"
                android:text="0.0"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_client_menu_agregar"
                app:layout_constraintEnd_toStartOf="@+id/bs_client"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txt_client_menu_title"
                app:layout_constraintTop_toBottomOf="@+id/imageView_client_menu_list"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/bs_client"
                android:layout_width="34dp"
                android:layout_height="42dp"
                android:layout_marginEnd="44dp"
                android:paddingTop="2dp"
                android:text="Bs."
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_client_menu_agregar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_client_menu_list"
                app:layout_constraintVertical_bias="0.625" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>